            <h1>Módulo de consultas</h1>
            <div  eblclass="container">    
              <table id="consultas" class="table table-bordered table-striped text-center mt-4">
                <thead>
                  <tr class="bg-primary text-white ">
                    <th scope="col">Id Responsiva</th>
                    <th scope="col">Propietario</th>
                    <th scope="col">Expedicion</th>
                    <th scope="col">Vencimiento</th>
                    <th scope="col">Catastro</th>             
                    <th scope="col">Acciones</th>              
                  </tr>
                </thead>
                <tbody>
                  <% results.forEach((result)=>{ %>
                    <tr>  
                        <td><%= result.responsiva_id %></td>  
                        <td><%= result.propietario %></td>  
                        <td><%= result.expe %></td>
                        <td><%= result.venci %></td>
                        <td><%= result.num_catastral %></td>
                        <td>
                          <a href="/" class="btn btn-outline-info"><i class="fas fa-edit"></i></a>
                          <a onclick="confirmar(<%=result.responsiva_id%>)"><i class="fas fa-trash"></i></a>                   
                        </td>
                    </tr>                                   
                 <% }) %>
                </tbody>
              </table>
